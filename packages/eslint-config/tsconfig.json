{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.*",
        "./dist/**/*",
        "../common/**/*test.*"
    ]
}